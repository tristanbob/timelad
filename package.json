{
  "name": "timelad",
  "displayName": "TimeLad",
  "description": "⚠️ ALPHA: A beginner-friendly Git time travel extension with safe version restoration and beautiful interactive history - USE ONLY FOR TESTING WITH DISPOSABLE DATA",
  "version": "0.1.0-alpha",
  "publisher": "tristanbob",
  "repository": {
    "type": "git",
    "url": "https://github.com/tristanbob/timelad"
  },
  "bugs": {
    "url": "https://github.com/tristanbob/timelad/issues"
  },
  "homepage": "https://github.com/tristanbob/timelad#readme",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onView:timelad-git-history",
    "onCommand:timelad.showGitInfo",
    "onCommand:timelad.showGitHistory",
    "onCommand:timelad.listCommits",
    "onCommand:timelad.saveChanges",
    "onCommand:timelad.setupVersionTracking",
    "onCommand:timelad.saveToGitHub",
    "onCommand:timelad.loadFromGitHub"
  ],
  "main": "./src/extension.js",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "contributes": {
    "commands": [
      {
        "command": "timelad.showGitInfo",
        "title": "TimeLad: Show Git Info"
      },
      {
        "command": "timelad.showGitHistory",
        "title": "TimeLad: Show Git History"
      },
      {
        "command": "timelad.listCommits",
        "title": "TimeLad: List Recent Commits"
      },
      {
        "command": "timelad.refreshGitHistory",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "timelad.restoreVersion",
        "title": "TimeLad: Restore Version"
      },
      {
        "command": "timelad.toggleExpertMode",
        "title": "TimeLad: Toggle Expert Mode"
      },
      {
        "command": "timelad.saveChanges",
        "title": "TimeLad: Save Changes"
      },
      {
        "command": "timelad.setupVersionTracking",
        "title": "TimeLad: Set Up Version Tracking"
      },
      {
        "command": "timelad.saveToGitHub",
        "title": "TimeLad: Save to GitHub"
      },
      {
        "command": "timelad.loadFromGitHub",
        "title": "TimeLad: Load from GitHub"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "timelad.refreshGitHistory",
          "when": "view == timelad-git-history",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "timelad-sidebar-view",
          "title": "TimeLad",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "timelad-sidebar-view": [
        {
          "id": "timelad-git-history",
          "name": "TimeLad",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "TimeLad",
      "properties": {
        "timelad.expertMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable expert mode to show detailed Git information and understand how the extension works",
          "order": 1
        },
        "timelad.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for repository operations",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run lint",
    "lint": "eslint .",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "@vscode/test-electron": "^1.6.2"
  },
  "keywords": [
    "git",
    "version control",
    "commit history",
    "git log",
    "time tracking",
    "git timeline",
    "development tools",
    "scm"
  ],
  "author": "tristanbob",
  "license": "MIT"
}
